#include <stdbool.h>
#include <stdio.h>

int main(void) {
    int Xx, Xy, Ox, Oy, count =0, Xcount=0, Ocount=0;
    char grid[3][3];
    bool done = false;
    printf("--Welcome--\n");
    for (int i=0; i<3; i++) {
        for(int x=0; x<3; x++) {
            grid[i][x] = '-';
        }
    }
    for (int i=0; i<3; i++) {
        for(int x=0; x<3; x++) {
            printf("%c", grid[i][x]);
        }
        printf("\n");
    }
    do {
        count =0;
        printf("Player x input");
        fflush(stdin);
        scanf("%d, %d", &Xx, &Xy);
        for (int i=0; i<3; i++) {
            for(int x=0; x<3; x++) {
                if(x==Xx && i==Xy) {
                    grid[i][x] = 'X';
                }
                printf("%c", grid[i][x]);
            }
            printf("\n");
        }
        printf("Player O input");
        fflush(stdin);
        scanf("%d, %d", &Ox, &Oy);
        for (int i=0; i<3; i++) {
            for(int x=0; x<3; x++) {
                if(x==Ox && i==Oy) {
                    grid[i][x] = '0';
                }
                printf("%c", grid[i][x]);
            }
            printf("\n");
        }
        for (int i=0; i<3; i++) {
            for(int x=0; x<3; x++) {
                if (grid[i][x] != '-') {
                    count++;
                }
            }
        }
        if (count == 9) {
            done = true;
        }
//top row
        if(grid[0][0] == '0' && grid[0][1] == '0' && grid[0][2] == '0') {
            printf("Player O won!");
            done = true;
        }
//middle row
        if(grid[1][0] == '0' && grid[1][1] == '0' && grid[1][2] == '0') {
            printf("Player O won!");
            done = true;
        }
//bottom row
        if(grid[2][0] == '0' && grid[2][1] == '0' && grid[2][2] == '0') {
            printf("Player O won!");
            done = true;
        }
//topleft-bottomleft
        if(grid[0][0] == '0' && grid[1][0] == '0' && grid[2][0] == '0') {
            printf("Player O won!");
            done = true;
        }
//topmiddle-bottommiddle
        if(grid[0][1] == '0' && grid[1][1] == '0' && grid[2][1] == '0') {
            printf("Player O won!");
            done = true;
        }
//topright-bottomright
        if(grid[0][2] == '0' && grid[1][2] == '0' && grid[2][2] == '0') {
            printf("Player O won!");
            done = true;
        }
//topleft-bottomright
        if(grid[0][0] == '0' && grid[1][1] == '0' && grid[2][2] == '0') {
            printf("Player O won!");
            done = true;
        }
//topright-bottomleft
        if(grid[0][2] == '0' && grid[1][1] == '0' && grid[0][2] == '0') {
            printf("Player O won!");
            done = true;
        }
        //Player X
        if(grid[0][0] == 'X' && grid[0][1] == 'X' && grid[0][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[1][0] == 'X' && grid[1][1] == 'X' && grid[1][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[2][0] == 'X' && grid[2][1] == 'X' && grid[2][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[0][0] == 'X' && grid[1][0] == 'X' && grid[2][0] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[0][1] == 'X' && grid[1][1] == 'X' && grid[2][1] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[0][2] == 'X' && grid[1][2] == 'X' && grid[2][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[0][0] == 'X' && grid[1][1] == 'X' && grid[2][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
        if(grid[0][2] == 'X' && grid[1][1] == 'X' && grid[0][2] == 'X') {
            printf("Player X won!");
            done = true;
        }
    } while (done == false);
    return 0;
}

